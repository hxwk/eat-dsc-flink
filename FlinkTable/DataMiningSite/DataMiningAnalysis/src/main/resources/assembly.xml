<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>release</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <!--tar.gz压缩包下是否生成和项目名相同的根目录-->
    <includeBaseDirectory>true</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <!--是否把本项目添加到依赖文件夹下-->
            <useProjectArtifact>false</useProjectArtifact>
            <!-- <outputDirectory>lib</outputDirectory>
            将scope为runtime的依赖包打包 -->
            <scope>null</scope>
            <!--指定最后生成依赖的名称格式，解决snapshot版本依赖引用不到的问题-->
            <outputFileNameMapping>${artifact.artifactId}-${artifact.baseVersion}.${artifact.extension}</outputFileNameMapping>
        </dependencySet>

    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>target/jars</directory>
            <outputDirectory>/target/jars</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>bin</directory>
            <outputDirectory>/bin</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>

        <fileSet>
            <directory>doc</directory>
            <outputDirectory>/doc</outputDirectory>
        </fileSet>

    </fileSets>

    <files>
        <file>
            <source>target/${artifact.artifactId}-${artifact.baseVersion}.jar</source>
            <outputDirectory>/target</outputDirectory>
        </file>

        <!-- 将配置文件放入到config目录下 -->
        <file>
            <source>target/classes/environment.xml</source>
            <outputDirectory>/config</outputDirectory>
        </file>
        <file>
            <source>target/classes/es-store-config.xml</source>
            <outputDirectory>/config</outputDirectory>
        </file>
        <file>
            <source>target/classes/hive-store-config.xml</source>
            <outputDirectory>/config</outputDirectory>
        </file>
    </files>

</assembly>